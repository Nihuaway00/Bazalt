{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ES2020",
		"jsx": "react",
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"plugins": [
			{
				"name": "@styled/typescript-styled-plugin",
				"tags": [
					"styled",
					"css",
					"sty"
				]
			}
		]
	},
	"exclude": [
		"node_modules",
		"**/node_modules/*"
	]
}